<div class="contianer">

    <h1> This is a list of reviews for {{thisCompany}}</h1>

    <hr/>
     <button class="btn btn-success" id="reviewBtn" value={{thisCompany}} data-toggle="modal" data-target="#exampleModalLong">Write a review</button>

     <div class="col-xs-2"></div>
     <button class="btn btn-warning" id="backBtn" value={{thisCompany}}>Back to Search</button>
     <hr/>



    <div class= "row">

        <div class="col-sm-7 col-xs-12">

            {{#each review}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{this.companyName}}</h3>                 
                </div>
                <div class="panel-body">
                    {{#if this.reviewerStatus}}
                    <h4>Current Employee</h4>
                    {{else}}
                    <h4>Former Employee</h4>
                    {{/if}}
                    <h5>Rating: {{this.rating}}</h5>
                    <br/>
                    <h5>What is your experience with {{this.companyName}}?</h5>
                    <p> {{this.question1}}</p>
                    <h5>What are the pros of working here?</h5>
                    <p> {{this.question2}}</p>
                    <h5>What are the cons?</h5>
                    <p> {{this.question3}}</p>
                    <h5>What advise would you give perspective employees</h5>
                    <p> {{this.question4}}</p>
                    <h5>What advise whould you give management?</h5>
                    <p> {{this.question5}}</p>
               
                </div>
            </div>
            {{/each}}
        </div>


        <div class="col-sm-5 col-xs-12">
            <canvas id="myChart" width="100" height="100"></canvas>
        </div>


    </div>
</div>






   <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLongTitle">{{thisCompany}}</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                <form>
            
            <div class="form-group">
                <h4>What is your relationship to this company?</h4>
                <select class="form-control" id = "employment">
                    <option>Current Employee</option>
                    <option>Former Employee</option>
                </select>
            </div>

            <hr/>   


            <div class="form-group">
                <h4>How would you rate this company overall?</h4>
                <select class="form-control" id = "rating" >
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <hr/>

            <div class="form-group">
                <label for="overallReview" class="col-sm-12 control-label">Give a brief overview of your experience</label>
                <input class="form-control" rows="5" id ="overallReview" placeholder="your experience"></input>
            </div>

            <div class="form-group">
                <label for="pros" class="col-sm-12 control-label">What are the pros of working here?</label>
                <input class="form-control" rows="5" id ="pros" placeholder="pros"></input>
            </div>

            <div class="form-group">
                <label for="cons" class="col-sm-12 control-label">What are the cons?</label>
                <input class="form-control" rows="5" id ="cons" placeholder="cons"></input>
            </div>

            <div class="form-group">
                <label for="applicantAdvice" class="col-sm-12 control-label">What advice would you give perspective employees?</label>
                <input class="form-control" rows="5" id ="applicantAdvice" placeholder="..."></input>
            </div>

            <div class="form-group">
                <label for="employerAdvice" class="col-sm-12 control-label">What advice would you give to management in this company?</label>
                <input class="form-control" rows="5" id ="employerAdvice" placeholder="..."></input>
            </div>

            
            <br/>
            
            
            <div class="form-group">

                <button type="submit" class="btn btn-default" id="submit-review">Submit</button>
                
            </div>
        </form>
        <br>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
       
      </div>
    </div>
  </div>





</div>
