<div class="container">
    <div class="text-center">
        <h1>{{thisCompany}}</h1>
        <h4>Company Profile</h4>

        <hr class="rule">
         <button class="btn btn-primary" id="reviewBtn" value={{thisCompany}} data-toggle="modal" data-target="#exampleModalLong">Write a review</button>
         <button class="btn btn-success" id="backBtn" value={{thisCompany}}>Back to Search</button>
     </div>

        <hr class="rule">
        <br>


    <div class= "row">

     <div class="col-sm-5">
            <canvas id="myChart" width="100" height="100"></canvas>
    </div>
    <br>

        <div class="col-sm-7">

            {{#each review}}
            <div class="panel panel-primary shadow">
                <div class="panel-heading">
                    <h3 class="panel-title">{{this.companyName}}</h3>                 
                </div>
                <div class="panel-body">
                    {{#if this.reviewerStatus}}
                    <h4>Current Employee</h4>
                    {{else}}
                    <h4>Former Employee</h4>
                    {{/if}}
                    <h5>Rating: {{this.rating}}</h5>
                    <br/>

                    {{#if this.question1}}
                    <h5>What is your experience with {{this.companyName}}?</h5>
                    
                    <p> {{this.question1}}</p>
                    {{/if}}

                    {{#if this.question2}}
                    <h5>What are the pros of working here?</h5>
                    <p> {{this.question2}}</p>
                    {{/if}}

                    {{#if this.question3}}
                    <h5>What are the cons?</h5>
                    <p> {{this.question3}}</p>
                    {{/if}}

                    {{#if this.question4}}
                    <h5>What advise would you give perspective employees</h5>
                    <p> {{this.question4}}</p>
                    {{/if}}

                    {{#if this.question5}}
                    <h5>What advise whould you give management?</h5>
                    <p> {{this.question5}}</p>
                    {{/if}}
               
                </div>
            </div>
            {{/each}}
        </div>


        


    </div>
</div>






   <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h2 class="modal-title"  style="padding-left: 20px" id="exampleModalLongTitle">{{thisCompany}}</h2>
            
          </div>
          <div class="modal-body">
                <form>
            
            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <h4>What is your relationship to this company?</h4>
                <select class="form-control" id = "employment">
                    <option>Current Employee</option>
                    <option>Former Employee</option>
                </select>
            </div>

            <hr/>   


            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <h4>How would you rate this company on a scale of 1-5? (5 being best)</h4>
                <select class="form-control" id = "rating" >
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>

            <hr/>

            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <label for="overallReview" class="col-sm-12 control-label">Give a brief overview of your experience</label>
                <textarea maxlength="150" class="form-control" rows="3" id ="overallReview" placeholder="your experience"></textarea>
            </div>

            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <label for="pros" class="col-sm-12 control-label">What are the pros of working here?</label>
                <textarea maxlength="150" class="form-control" rows="3" id ="pros" placeholder="pros"></textarea>
            </div>

            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <label for="cons" class="col-sm-12 control-label">What are the cons?</label>
                <textarea maxlength="150" class="form-control" rows="3" id ="cons" placeholder="cons"></textarea>
            </div>

            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <label for="applicantAdvice" class="col-sm-12 control-label">What advice would you give perspective employees?</label>
                <textarea maxlength="150" class="form-control" rows="3" id ="applicantAdvice" placeholder="..."></textarea>
            </div>

            <div class="form-group" style="padding: 0px 20px 10px 20px">
                <label for="employerAdvice" class="col-sm-12 control-label">What advice would you give to management in this company?</label>
                <textarea maxlength="150" class="form-control" rows="3" id ="employerAdvice" placeholder="..."></textarea>
            </div>

            
            <br/>
            
            
            <div class="form-group">

                
                
            </div>
        </form>
        <br>
        <div class="modal-footer">
        <button type="submit" class="btn btn-primary" id="submit-review">Submit</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
       
      </div>
    </div>
  </div>





</div>
